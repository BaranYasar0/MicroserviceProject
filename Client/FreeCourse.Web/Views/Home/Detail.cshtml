@using FreeCourse.Web.Models.ViewModels.Catalog

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.StockPictureUrl" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <div class="badge bg-primary">@Model.Category.Name</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card-body">
            <h4 class="card-title">Fiyat: @Model.Price TL</h4>
            <div class="d-grid">
                <a class="btn btn-primary" asp-controller="Basket" asp-action="AddBasketItem" asp-route-courseId="@Model.Id" >Sepete Ekle</a>
            </div>
        </div>
    </div>
</div>
